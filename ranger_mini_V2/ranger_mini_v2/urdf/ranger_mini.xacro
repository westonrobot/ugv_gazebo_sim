      </contact>
    </collision>
  </link>
  <joint name="fr_wheel" type="continuous">
    <origin xyz="0 -0.02 -0.22" rpy="0 0 0" />
    <parent link="fr_steering_wheel_link" />
    <child link="fr_wheel_link" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- Rear Left Wheel Section -->
