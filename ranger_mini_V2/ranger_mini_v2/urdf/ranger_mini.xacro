      <geometry>
        <mesh filename="package://ranger_mini_v2/meshes/Wheel_RL_1.stl"
          scale="0.001 0.001 0.001" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.245 -0.18 0.22" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ranger_mini_v2/meshes/Wheel_RL_1.stl"
          scale="0.001 0.001 0.001" />
      </geometry>
      <contact>
        <ode>
          <min_depth>0.001</min_depth>
        </ode>
      </contact>
    </collision>
  </link>
  <joint name="rl_wheel" type="continuous">
    <origin xyz="0 0.02 -0.22" rpy="0 0 0" />
    <parent link="rl_steering_wheel_link" />
    <child link="rl_wheel_link" />
    <axis xyz="0 1 0" />
