<?xml version="1.0"?>

<robot name="ranger_mini_v2"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find ranger_mini_v2)/urdf/ranger_l.xacro" />
  <xacro:include filename="$(find ranger_mini_v2)/urdf/ranger_r.xacro" />

  <!-- Variables -->
  <xacro:property name="M_PI" value="3.14159" />

  <!-- Vehicle Geometries -->
  <xacro:property name="base_x_size" value="0.738" />
  <xacro:property name="base_y_size" value="0.5" />
  <xacro:property name="base_z_size" value="0.338" />

  <xacro:property name="wheelbase" value="0.498" />
  <xacro:property name="track" value="0.58306" />
  <xacro:property name="wheel_vertical_offset" value="-0.0702" />

  <xacro:property name="wheel_length" value="1.1653e-01" />
  <xacro:property name="wheel_radius" value="1.6459e-01" />

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ranger_mini_v2/meshes/base_link.stl"
          scale="0.001 0.001 0.001" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ranger_mini_v2/meshes/base_link.stl"
          scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <!-- Front Left Wheel Section -->
  <link name="fl_steering_wheel_link">
    <visual>
      <origin xyz="-0.24 -0.18 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ranger_mini_v2/meshes/Wheel_Mount_FL_1.stl"
          scale="0.001 0.001 0.001" />
      </geometry>
    </visual>
  </link>

  <joint name="fl_steering_wheel" type="revolute">
    <origin xyz="0.24 0.18 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="fl_steering_wheel_link" />
    <axis xyz="0 0 1" rpy="0 0 0" />
    <limit effort="5" velocity="6.28" lower="-2.1" upper="2.1" />
  </joint>

  <link name="fl_wheel_link">
    <visual>
      <origin xyz="-0.245 -0.18 0.22" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ranger_mini_v2/meshes/Wheel_FL_1.stl"
          scale="0.001 0.001 0.001" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="-0.245 -0.18 0.22" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ranger_mini_v2/meshes/Wheel_FL_1.stl"
          scale="0.001 0.001 0.001" />
      </geometry>
      <contact>
        <ode>
          <min_depth>0.001</min_depth>
        </ode>
      </contact>
    </collision>
  </link>
  <joint name="fl_wheel" type="continuous">
    <origin xyz="0 0.02 -0.22" rpy="0 0 0" />
    <parent link="fl_steering_wheel_link" />
    <child link="fl_wheel_link" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- Front Right Wheel Section -->
  <link name="fr_steering_wheel_link">
