      <geometry>
        <mesh filename="package://ranger_mini_v2/meshes/Wheel_Mount_RR_1.stl"
          scale="0.001 0.001 0.001" />
      </geometry>
    </visual>
  </link>
  <joint name="rr_steering_wheel" type="revolute">
    <origin xyz="-0.24 -0.18 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="rr_steering_wheel_link" />
    <axis xyz="0 0 1" rpy="0 0 0" />
    <limit effort="5" velocity="6.28" lower="-2.1" upper="2.1" />
  </joint>
  <link name="rr_wheel_link">
    <visual>
      <origin xyz="0.245 0.18 0.22" rpy="0 0 0" />
      <geometry>
